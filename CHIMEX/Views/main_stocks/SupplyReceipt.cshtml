@{
    ViewBag.Title = "SupplyReceipt";
    Layout = "~/Views/Shared/_Layout.cshtml";
    CHIMEX.Models.chimexerpEntities db = new CHIMEX.Models.chimexerpEntities();
    decimal TotalAmount = 0;
    string id = ViewBag.id;
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="card-header py-3">
                    <center>
                        <h4 class="m-0 font-weight-bold text-primary">Stock Out</h4>
                    </center>
                </div>

                <div class="panel-body" id="rpt">
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6" id="PrintPage">
                            <h3 class="text-center">GOBBLES BAKERY</h3>
                            <p class="text-center">
                                NO. 37, Bourmediene Road, Narayi High Cost Junction Kaduna.
                            </p>
                            <p class="text-center">
                                08154546234, 09032155947
                            </p>
                            <h3 class="text-center ">*****Stock Out Receipt*****</h3>
                            <h4 class="text-center">---------------------------</h4>
                            <table class="table">
                                <tr class="success">
                                    <th>
                                        Item
                                    </th>
                                    <th>
                                        Quantity
                                    </th>
                                    <th></th>
                                </tr>
                                @foreach (var item in db.main_stocks_Report.Where(p => p.batch_id == id))
                                {
                                    <tr class="">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.main_stocks.product.product_name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.qty)
                                        </td>
                                        <td></td>
                                    </tr>
                                }
                                <tr>
                                    <td>
                                        <hr /> 
                                        <div class="row">
                                            <div class="col-md-12 text-center">
                                                <button class="btn btn-success btn-line" onclick="javascript:printDiv('PrintPage');">
                                                    <i class="icon icon-print"></i>
                                                    Print
                                                </button>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    </div>
            </div>
        </div>
    </div>
</div>